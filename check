set -e

if ! test -f config.status; then
    echo config.status does not exist. Run configure first. >&2
    exit 1
fi
. ./config.status

for test in test/java-functions/*_test.sh; do
    echo "`basename $test`:"
    sh $test || exit 1
done

if [ -z "$pyinterpreter" ]; then
    exit 0
fi

if ! coverage --version >/dev/null 2>&1; then
    coverage(){ :;}
fi

cat >.coveragerc <<EOF
[run]
parallel = True
data_file = ${PWD}/.coverage
source =
    ${PWD}/python/javapackages/
    ${PWD}/java-utils/
    ${PWD}/depgenerators/
EOF
coverage erase
export COVERAGE_PROCESS_START="${PWD}/.coveragerc"
export PYTHONPATH="${PWD}/test/coverage${PYTHONPATH:+:}${PYTHONPATH:-}"

echo "Running Python tests with ${pyinterpreter}..."
(cd ./python && "${pyinterpreter}" -m pytest -v --cov-config=../.coveragerc)
r1=$?
(cd ./test && PYTHONPATH="${PWD}/../python${PYTHONPATH:+:}${PYTHONPATH:-}" "${pyinterpreter}" -m pytest -v --cov-config=../.coveragerc)
r2=$?

if [ ${r1} -lt ${r2} ]; then
    r1=${r2}
fi

unset PYTHONPATH COVERAGE_PROCESS_START
coverage combine
coverage xml
coverage report

exit ${r1}
